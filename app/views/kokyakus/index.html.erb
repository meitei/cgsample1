<div class="title">顧客管理：検索</div>
<div class="statuslabel"><span>条件設定</span>検索条件を指定してください。</div>
<div id="kokyakuSearch" class="Searchform cf">
<%= render 'search' %>
</div>
<div style="clear:both;" id="customer">
    <table id="searchCustomerGrid"></table>
    <div id="searchCustomerPager"></div>
</div>
<div class="btn_new">
    <a class="btn_new_kokyaku" id="btnCustomerNew" href="/kokyakus/new">新規追加</a>
</div>
<script>
$(function() {
    $("#kokyakuForm").validate({
        errorClass:'error',
        errorElement:'label',
        highlight: function (element, errorClass, validClass) {
            $(element).addClass(errorClass);
        },
        unhighlight: function (element, errorClass, validClass) {
            $(element).removeClass(errorClass);
        },
        rules: {
            kokyakuNm1: {required:true, maxlength:10},
            kokyakuNm2: {required:true, maxlength:10},
            kokyakuNmKana1: {katakana:true, maxlength:10},
            kokyakuNmKana2: {katakana:true, maxlength:10},
            //seibetsu: {required:true, maxlength:10},
            // tanjoDt: {date:true},
            postNo: {postnum:true, maxlength:8},
            address1: {maxlength:100},
            address2: {maxlength:100},
            tel1: {telnum:true, maxlength:12},
            tel2: {mobilenum:true, maxlength:13},
            fax: {telnum:true, maxlength:12},
            //shobyouCd1: {required:true, maxlength:10},
            //shobyouCd2: {required:true, maxlength:10},
            //shobyouCd3: {required:true, maxlength:10},
            gakkoNm: {maxlength:20},
            biko: {maxlength:100},
        }
        //messages: {
        //    kokyakuNm1: {required:"顧客名を入力してください", maxlength:"10文字を超えてます"}
        //    kokyakuNm2: {required:"顧客名を入力してください", maxlength:"10文字を超えてます"}
        //}
    });
    var isLoaded = false;
    var colNames = ["","ID","顧客名","顧客カナ","","性別","生年月日","郵便番号","住所１","住所２","電話番号","携帯番号","FAX番号","傷病名","学校名・施設名","備考","","","",""];
    var colModelSettings = [
        {name:"check",index:"check",width:20,align:"center",edittype:"checkbox",formatter:"checkbox",editable:true},
        {name:"kokyakuId", index:"kokyakuId",width:60},
        {name:"kokyakuNm", index:"kokyakuNm",width:80},
        {name:"kokyakuNmKana", index:"kokyakuNmKana",width:100},
        {name:"seibetsu", index:"seibetsu",hidden:true},
        {name:"seibetsuNm", index:"seibetsuNm",width:35},
        // {name:"tanjoDt", index:"tanjoDt",width:80, formatter:'date', formatoptions:{srcformat: 'Y-m-d',newformat: 'Y/m/d'}},
        {name:"tanjoDt", index:"tanjoDt",width:120},
        {name:"postNo", index:"postNo",width:80},
        {name:"address1", index:"address1",width:100},
        {name:"address2", index:"address2",width:100},
        {name:"tel1", index:"tel1", width:80},
        {name:"tel2", index:"tel2", width:80},
        {name:"fax", index:"fax", width:80},
        {name:"shobyoNm1", index:"shobyoNm1",width:80},
        {name:"gakkoNm", index:"gakkoNm",width:80},
        {name:"biko", index:"biko", editable:true, hidden:true, edittype:"textarea", editrules:{edithidden:true}},
        {name:"koshinshaId", index:"koshinshaId", hidden:true},
        {name:"torokushaId", index:"torokushaId", hidden:true},
        {name:'updateImg', index:'updateImg', align:'center', width:20, formatter: updateFormatter},
        {name:'deleteImg', index:'deleteImg', align:'center', width:20, formatter: deleteFormatter}
    ];
    $("#searchCustomerGrid").jqGrid({
        datatype: "local",
        //url: "kokyakus.json",
        width: "940",
        height: "240",
        cellEdit: false,
        rowNum: 10,
        //rowList:[10,20,30],
        pager: "searchCustomerPager",
        multiselect: false,
        //viewrecords: true,
        colNames: colNames,
        colModel: colModelSettings,
        ondblClickRow: function(id) {
            rowdata = $('#searchCustomerGrid').getRowData(id);
            modifyKokyaku(rowdata.kokyakuId)
        },
        shrinkToFit:false

    }).navGrid('#searchCustomerPager',{edit:false, add:false, del:false, search:false});

    $("#kokyaku_seibetsu").css("width", "100px").attr("tabindex", "10");

    var kokyakuItems = ["kokyakuIdFrom","kokyakuIdTo"];
    $.each(kokyakuItems, function(i) {
        var itemId = "#" + this;
        $( itemId ).autocomplete({
        // source: availableTags,
            source: function(request, response) {
              $.ajax({
                url: "/common_data/kokyaku_list.json",
                dataType: "json",
                root: "list",
                data: {'kokyakuId' : $( itemId ).val()},
                success: function(data) {
                  response($.map(data, function(item) {
                    return {
                      label: item.kokyakuNm1+' '+item.kokyakuNm2+' - '+item.kokyakuId,
                      value: item.kokyakuId
                    }
                  }))
                }
              })
            }
        });
    });

    $( "#shobyouNm" ).autocomplete({
        source: function(request, response) {
          $.ajax({
            url: "/common_data/shobyo_list.json",
            dataType: "json",
            root: "list",
            data: {'shobyoCd' : $('#shobyouNm').val()},
            success: function(data) {
              response($.map(data, function(item) {
                return {
                  label: item.shobyoNm+' - '+item.shobyoCd,
                  value: item.shobyoNm
                }
              }))
            }
          })
        }
    });

    // 修正画面から遷移した場合、再検索を行う
    setConditions();
});

$("a#btnCustomerSearch").click(function() {
    searchKokyaku();
    return false;
});

$("a#btnCustomerClear").click(function() {
    $('#kokyakuSearchForm input[type="text"]').val('');
    return false;
});

// $("a#btnCustomerNew").click(function() {
//     showKokyakuFormDialog();
//     return false;
// });

function updateFormatter(cellval, options, rowdata) {
    return "<img src='/images/database-reload-alt-1.png' onclick='modifyKokyaku(" + rowdata['kokyakuId'] + ")' title='更新' style='width:16px; height:16px'>";
}

function deleteFormatter(cellval, options, rowdata) {
    return "<img src = '/images/database-remove-alt-1.png' onclick='removeKokyaku(" + rowdata['kokyakuId'] + ")' title='削除' style='width:16px; height:16px'>";
}

// 検索用メソッド
function searchKokyaku() {
    var data = {};
    var search = $("#kokyakuSearchForm").serializeArray();
    $.each(search, function() {
        data[this.name] = this.value;
    });
    $("#searchCustomerGrid").clearGridData();
    var param = {
        datatype: "json",
        url: "kokyakus/search.json",
        postData: data,
        jsonReader: {
            root: "rows",
            page: "page",
            total: "total",
            records: "records",
            repeatitems: false
        }
    };
    $("#searchCustomerGrid").setGridParam(param).trigger("reloadGrid");
}

// 更新用メソッド
function modifyKokyaku(kokyakuId) {
    saveConditions();
    location.href = "kokyakus/" + kokyakuId + "/edit";
    return false;
}

// 削除用メソッド
function removeKokyaku(kokyakuId) {
    if (confirm("削除します。よろしいですか？") == false) {
        return false;
    }
    var url = "kokyakus/" + kokyakuId + ".json";
    var type = "DELETE";
    $.ajax({
        scriptCharset:"UTF-8",
        type: type,
        url: url,
        data: "id=" + kokyakuId,
        dataType: "json",
        success: function(result) {
        }
    });
    searchKokyaku();
    return false;
}

function saveConditions() {
    $.cookie.json = true;
    var data = $("#kokyakuSearchForm").serializeArray();
    $.cookie('kokyaku_conditions', data);
}

function setConditions() {
    if (location.search.match(/reload=on/g)) {
        var conditions = $.cookie('kokyaku_conditions');
        $.removeCookie('kokyaku_conditions');
        if (conditions) {
            $("#kokyakuSearchForm")
                .deserialize($.parseJSON(conditions));
        }
        searchKokyaku();
    }
}

</script>