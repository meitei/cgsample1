<%= form_tag sessions_path, :method => :post do %>
  <div class="field">
    <label for="username">ログインID</label>
    <%= text_field_tag :username %>
  </div>
  <div class="field">
    <label for="password">ログインパスワード</label>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "ログイン" %>
  </div>
<% end %>
